<div id="submitIdeas">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>Break It Down</h1>
        <h2>Add your ideas!</h2>
    
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" class="form-control" aria-describedby="title" placeholder="Enter your title">
          </div>

          <div class="form-group">
            <label for="description">Project Description</label>
            <textarea class="form-control" id="description" aria-describedby="description" placeholder="Enter Description"></textarea>
          </div>

          <div class="form-group">
            <label for="technology-used">Technology Used ("JavaScript, Express, Node, etc."")</label>
            <textarea class="form-control" id="technology-used" aria-describedby="technology-used" placeholder="Enter technologies used"></textarea>
          </div>

          <div class="form-group">
            <label for="users-story">User Story ("As a [ role of a person ], I want [ capability ] so that [receive benefit]")</label>
            <textarea class="form-control" id="users-story" aria-describedby="users-story" placeholder="Enter user story"></textarea>
          </div>

          <div class="form-group">
            <label for="link">Share your URL</label>
            <input type="text" id="link" class="form-control" aria-describedby="link" placeholder="Enter your URL">
          </div>

          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
         </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>